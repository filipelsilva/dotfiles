[core]
	editor = nvim

[alias]
	tree = log --graph --pretty=oneline --abbrev-commit
	acp = "!f() { git add -A && git commit -m \"$*\" && git push; }; f"

[diff]
	tool = vimdiff

[difftool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[difftool]
	prompt = false

[merge]
	tool = vimdiff

[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
