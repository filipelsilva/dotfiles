[delta]
	features = line-numbers decorations gruvbox-dark

[interactive]
    diffFilter = delta --color-only

[core]
	pager = delta
	editor = nvim

[pager]
	log = delta
	show = delta
	diff = delta

[diff]
	tool = delta

[difftool]
	prompt = false

[difftool "delta"]
	cmd = delta $LOCAL $REMOTE

[merge]
	tool = vimdiff

[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
