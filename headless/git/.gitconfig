	name = Filipe Ligeiro Silva
	email = 57916727+filipelsilva@users.noreply.github.com

[alias]
	ac = !git add --all && git commit
	bl = blame -w -C -C -C
	br = branch
	cm = commit
	co = checkout
	df = diff
	dfs = diff --staged
	dt = difftool
	dts = difftool --staged
	fpush = push --force-with-lease
	mg = merge
	mt = mergetool
	st = status --short --branch
	stash = stash --all
	tree = log --graph --oneline --decorate --all

[core]
	autocrlf = input

[color]
	ui = auto

[column]
	ui = auto

[commit]
	verbose = true

[branch]
	sort = -committerdate

[init]
	defaultBranch = main

[log]
	date = iso

[rerere]
	enabled = true

[help]
	autocorrect = prompt

[transfer]
	fsckobjects = true
[fetch]
	fsckobjects = true
[receive]
	fsckobjects = true

[diff]
	algorithm = histogram
	colorMoved = default
	colorMovedWS = allow-indentation-change
	tool = vimdiff
[difftool]
	prompt = false
[difftool "vimdiff"]
	cmd = ${EDITOR:-vim} -d "$LOCAL" "$REMOTE"

[merge]
	tool = vimdiff
	conlfictstyle = zdiff3
[mergetool]
	prompt = true
[mergetool "vimdiff"]
	cmd = ${EDITOR:-vim} -d "$LOCAL" "$MERGED" "$REMOTE"
