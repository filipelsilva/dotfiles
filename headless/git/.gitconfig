	name = "Filipe Ligeiro Silva"
	email = "57916727+filipelsilva@users.noreply.github.com"

[alias]
	ac = "!git add --all && git commit"
	br = "branch"
	cm = "commit"
	co = "checkout"
	df = "diff"
	dfs = "diff --staged"
	dt = "difftool"
	dts = "difftool --staged"
	mg = "merge"
	mt = "mergetool"
	st = "status --short --branch"
	sts = "status"
	tree = "log --graph --oneline --decorate --all"

[core]
	autocrlf = input

[help]
	autocorrect = 30

[init]
	defaultBranch = main

[pull]
	rebase = false

[rerere]
	enabled = true

[diff]
	colorMoved = zebra
	tool = vimdiff
[difftool]
	prompt = false
[difftool "vimdiff"]
	cmd = ${EDITOR:-vim} -d "$LOCAL" "$REMOTE"

[merge]
	tool = vimdiff
[mergetool]
	prompt = true
[mergetool "vimdiff"]
	cmd = ${EDITOR:-vim} -d "$LOCAL" "$REMOTE" "$MERGED"
