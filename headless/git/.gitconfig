[alias]
	ac = commit -a
	amend = commit -a --amend --no-edit
	bl = blame -w -C -C -C
	br = branch
	cm = commit
	co = checkout
	cp = cherry-pick
	df = diff
	dfs = diff --staged
	dt = difftool
	dts = difftool --staged
	fpush = push --force-with-lease
	mg = merge
	mt = mergetool
	rb = rebase
	rs = reset
	rv = revert
	st = status --short --branch
	sw = switch
	tree = log --graph --oneline --decorate --all

[core]
	autocrlf = input

[color]
	ui = auto

[commit]
	verbose = true

[branch]
	sort = -committerdate

[init]
	defaultBranch = main

[log]
	date = iso

[rebase]
	updateRefs = true
	autoSquash = true

[rerere]
	enabled = true
	autoupdate = true

[push]
	autoSetupRemote = true
	followTags = true

[tag]
	sort = version:refname

[checkout]
	defaultRemote = origin

[push]
	autoSetupRemote = true

[help]
	autocorrect = prompt

[fetch]
	all = true
	prune = true
	pruneTags = true
	fsckobjects = true

[receive]
	fsckobjects = true

[transfer]
	fsckobjects = true

[instaweb]
	httpd = python

[diff]
	algorithm = histogram
	colorMoved = plain
	colorMovedWS = allow-indentation-change
	renames = true
	tool = vimdiff
[difftool]
	prompt = false
[difftool "vimdiff"]
	cmd = ${EDITOR:-vim} -d "$LOCAL" "$REMOTE"

[merge]
	tool = vimdiff
	conlfictstyle = zdiff3
[mergetool]
	prompt = true
[mergetool "vimdiff"]
	cmd = ${EDITOR:-vim} -d "$LOCAL" "$BASE" "$REMOTE" "$MERGED" -c '$wincmd w' -c 'wincmd J'
