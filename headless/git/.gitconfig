[alias]
	br = branch

	bl = blame
	blc = blame -w -C -C -C
	blm = blame -w -C -C -C -M

	cm = commit
	ac = commit --all
	amend = commit --all --amend
	amende = commit --all --amend --no-edit
	fixup = commit --fixup

	co = checkout
	cob = checkout -b

	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue

	df = diff
	dfs = diff --staged
	dt = difftool
	dts = difftool --staged

	grep = grep -p

	lg = log --oneline
	lf = log -S
	tree = log --oneline --graph --decorate --all

	mg = merge
	mga = merge --abort
	mgc = merge --continue
	mt = mergetool

	ps = push
	psf = push --force-with-lease
	pl = pull
	plb = pull --rebase

	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --interactive
	rbs = rebase --skip
	rbas = rebase --autosquash

	rs = reset

	rv = revert

	rt = restore

	st = status --short --branch

	wt = worktree

[core]
	autocrlf = input
	whitespace = trailing-space

[color]
	ui = auto

[commit]
	verbose = true

[branch]
	sort = -committerdate

[init]
	defaultBranch = main

[log]
	date = iso

[rebase]
	updateRefs = true
	autoSquash = true

[rerere]
	enabled = true
	autoupdate = true

[push]
	autoSetupRemote = true
	followTags = true

[tag]
	sort = -version:refname

[checkout]
	defaultRemote = origin

[help]
	autocorrect = prompt

[maintenance]
	auto = true
	strategy = incremental

[fetch]
	all = true
	prune = true
	pruneTags = true
	fsckobjects = true

[receive]
	fsckobjects = true

[transfer]
	fsckobjects = true

[instaweb]
	httpd = python

[diff]
	algorithm = histogram
	colorMoved = plain
	colorMovedWS = allow-indentation-change
	renames = true
	tool = vimdiff
[difftool]
	prompt = false
[difftool "vimdiff"]
	cmd = ${EDITOR:-vim} -d "$LOCAL" "$REMOTE"

[merge]
	tool = vimdiff
	conlfictstyle = zdiff3
[mergetool]
	prompt = true
[mergetool "vimdiff"]
	cmd = ${EDITOR:-vim} -d "$LOCAL" "$BASE" "$REMOTE" "$MERGED" -c '$wincmd w' -c 'wincmd J'
